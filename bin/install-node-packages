#!/usr/bin/env bash

#
# Install node packages
#

#
# git-open : Open git file in browser from command line
#

npm list --global --depth=0

command -v cspell || npm install --global cspell
command -v cspell-dict-lorem-ipsum-link ||        \
  npm install --global cspell-dict-lorem-ipsum ;  \
  cspell-dict-lorem-ipsum-link
command -v cypress || npm install --global cypress
command -v git-open || npm install --global git-open
command -v neovim-node-host || npm install --global neovim
command -v ncu || npm install --global npm-check-updates
command -v serverless || npm install --global serverle

npm -g outdated

echo
echo "... Global node packages installed"
