#!/usr/bin/env python3

#
# Report on configuration
#

import argparse, os, sys, subprocess
from pathlib import Path

def usage():
  parser.print_help()

def heading(heading, separator = "-"):
  if (separator == "-"):
    print()
  print(heading)
  print(separator * 40)

def reportBrew():
  heading("Brew")
  os.system("brew leaves | column -c 80")

def reportFish():
  heading("fish")
  heading("omf",".")
  os.system("fish -c 'omf list'")

def reportAll():
  reportFish()
  reportBrew()

parser = argparse.ArgumentParser(description="System Report")
parser.add_argument("--brew", dest="reports", const="brew", 
                    help="Brew report", action='append_const')
parser.add_argument("--fish", dest="reports", const="fish",
                    help="fish report", action='append_const')
parser.add_argument("--helpx", dest="help", help="Help", action="store_true")

def main(argv):
  heading("dotfiles System Report"," ")
  args = parser.parse_args()
  if args.reports is None:
    reportAll()
  else:
    if args.help : usage()
    if 'brew' in args.reports : reportBrew()
    if 'fish' in args.reports : reportFish()

if __name__ == "__main__":
  main(sys.argv[1:])
