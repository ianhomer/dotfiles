#!/usr/bin/env bash

help() {
  cat << EOF
  -e eslint
  -h this help
  -p prettier
  -v vale
EOF
}

OPTIND=1
while getopts "ehpv" o; do case "$o" in
  e) ESLINT=y ;;
  p) PRETTIER=y ;;
  v) VALE=y ;;
  h) HELP=y ;;
  *) exit 1 ;;
esac done
shift $((OPTIND-1))

resource=${1:-.}

if [[ "${HELP}" == "y" || -z "${ESLINT}${PRETTIER}${VALE}" ]] ; then
  help
  exit 1
fi

if [[ "$ESLINT" == "y" || "$PRETTIER" == "y" ]] ; then
  # The start of trouble
  if [[ -f yarn.lock ]] ; then
    command="yarn -s"
  elif [[ -f pnpm.lock ]] ; then
    command="pnpm"
  elif [[ -f npm.lock ]] ; then
    command="npm"
  fi
  if [[ -z $command ]] ; then
    echo "Cannot determine command, are you in the root of the repository"
    exit 1
  fi

  if [[ "$ESLINT" == "y" ]] ; then
    ${command} eslint ${resource} -f json               |
      jq '.[] | select((.messages | length) > 0) | .filePath' -r |
      xargs realpath --relative-to=$PWD |
      fzf -m --bind ctrl-t:toggle-all   |
      xargs nvim "+Trouble" "+silent argdo e"
  fi

  if [[ "$PRETTIER" == "y" ]] ; then
    ${command} prettier ${resource} -c 2>&1    |
      grep -v "run Prettier?"  |
      grep "warn"              |
      sed 's/\[warn\] //'      |
      head -n 20               |
      xargs realpath --relative-to=$PWD |
      fzf -m --bind ctrl-t:toggle-all   |
      xargs nvim "+Trouble" "+silent argdo e"
  fi
else
  if [[ "$VALE" == "y" ]] ; then
    vale --output JSON . | jq 'keys[]'  |
      xargs realpath --relative-to=$PWD |
      fzf -m --bind ctrl-t:toggle-all   |
      xargs nvim "+Trouble" "+silent argdo e"
  fi
fi

