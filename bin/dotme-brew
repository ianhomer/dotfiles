#!/usr/bin/env bash

#
# Install brew packages
#

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
PATH=${SCRIPT_DIR}:${PATH}
BREW_DIR=$SCRIPT_DIR/../config/brew

should-run -m 7 $0 $BREW_DIR/Brewfile || exit

if ! is-executable brew ; then
  echo "... installing brew"
  curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install \
    | ruby
fi

adminFormula="java11"

echo "... updating brew"

# Pin formula that need password to upgrade
brew pin $adminFormula > /dev/null 2>&1

# Use latest version of brew
brew update

# Upgrade any already installed formulae
brew upgrade

cd $SCRIPT_DIR/../config/brew
brew bundle

if [[ "$1" == "with-admin" ]] ; then
  brew update $adminFormula
  echo "... installing admin packages"
  cd $SCRIPT_DIR/../config/brew/admin
  brew bundle
fi

should-run -fu $0
