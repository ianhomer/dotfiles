#!/usr/bin/env bash

#
# Install jenv versions
#

should-run $0 || exit

_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
. ${_DIR}/functions/log.sh

if ! command -v jenv &> /dev/null ; then
  o_o "jenv not installed"
else
  # Refresh / rehash jenv vonfiguration

  jenv rehash 2>/dev/null
  jenv refresh-plugins

  set -e JAVA
  o_o "JDKs installed"
  for jdk in /Library/Java/JavaVirtualMachines/*/Contents/Home ; do
    o_o "$jdk"
    JAVA_VERSION=$($jdk/bin/java -version 2>&1 | sed -n ';s/.* version "\([^"]*\)".*/\1/p;')
    jenv add $jdk | grep -v "skip" || o_o OK "$JAVA_VERSION" "already added to jenv"
  done

  o_o "JDKs registered with jenv"
  jenv versions
fi


should-run -fu $0

