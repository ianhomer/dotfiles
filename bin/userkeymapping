#!/usr/bin/env python3

#
# Generate a UserKeyMapping value which can be used in dotme-keymapping
# to map keyboard
#
# See https://developer.apple.com/library/archive/technotes/tn2450/_index.html#//apple_ref/doc/uid/DTS40017618-CH1-KEY_TABLE_USAGES

import os

escape      ="29"
capsLock    ="39"
rightShift  ="e5"
enter       ="58"

mapping={
#  rightShift:enter
}

base="0x7000000"
value='{"UserKeyMapping":['
for key in mapping:
  value+='{"HIDKeyboardModifierMappingSrc":' + base + key + ','
  value+='"HIDKeyboardModifierMappingDst":'+ base + mapping[key] + '}'
value+=']}'
print(value)

os.system("hidutil property --set '" + value + "'")

