#!/usr/bin/env bash

should-run -m 7 $@ $0 || exit 0
$(shim) && cd ${ME} && . bin/i.sh

log:: "configuring rust"

if ! command -v rustup-init ; then
  log::warn "rustup-init not installed"
  exit
fi

if ! command -v cargo ; then
  log:: "initialising rust"
  rustup-init -y
fi

rustup update
cargo install stylua

should-run -fu $0
