#!/usr/bin/env bash

#
# Pull latest dotfiles
#

set -e

should-run -m 1h $0 || exit 0

$(shim) && . ${ME}/i.sh

if git config pull.rebase > /dev/null ; then
  cd ${DOTFILES_DIR}
  if [[ -d .git ]]; then
    _ "pulling latest version of dotfiles"
    printf "\e[35m"
    git pull
    printf "\e[0m"
  else
    _ ".dotfiles is not a git directory, not updating"
  fi
else
  _ "skipping pull of latest dotfiles"
fi

should-run -fu $0
