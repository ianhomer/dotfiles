#!/usr/bin/env python3

import argparse
from pathlib import Path
home = str(Path.home())

LOCAL_SHIM = str(Path.home()) + "/.config/dotme/.shim"


def run():
    print(f"SHIM {LOCAL_SHIM}")
    parser = argparse.ArgumentParser(description='todoer')
    parser.add_argument('do', nargs='+', help='do')
    args = parser.parse_args()
    words = []

    # Scan words
    for word in args.do:
        print(f"Word {word}")
        words.append(word)

    # do to add
    do = " ".join(words)
    print(f"Do {do}")


run()
