#!/usr/bin/env bash

set -e

$(shim)

is-connected || echo "Not connected, no sync" ; exit 1

FETCH_WINDOW=600
while getopts "w:" o; do case "$o" in
  w) FETCH_WINDOW=$OPTARG ;;
esac done

cd $THINGS_DIR
git synk -w $FETCH_WINDOW

# Fix modified time for things
for child in */ ; do
  (cd $child ; git fix-mtime)
done
